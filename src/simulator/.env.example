# Ticket Simulator Configuration Example
# Copy this file to .env and modify values as needed

# Core Configuration
API_BASE_URL=http://localhost:8082

# Multi-Tenant Configuration
# Use TENANT_IDS for multiple tenants (comma-separated)
TENANT_IDS=simulator-tenant-1,simulator-tenant-2,simulator-tenant-3
# Or use TENANT_ID for single tenant (backward compatibility)
# TENANT_ID=simulator-tenant

CSV_FILE_PATH=./data/request_202502111503.csv
LOG_LEVEL=info

# EPS (Events Per Second) Configuration
EPS_CREATE=2.0
EPS_SEARCH=1.0
EPS_GET=1.0
EPS_UPDATE=0.5

# HTTP Client Configuration
HTTP_TIMEOUT=30s
HTTP_MAX_IDLE_CONNS=100
HTTP_MAX_CONNS_PER_HOST=10
HTTP_RETRY_ATTEMPTS=3
HTTP_RETRY_DELAY=1s

# Operation Configuration
CREATE_ENABLED=true
SEARCH_ENABLED=true
GET_ENABLED=true
UPDATE_ENABLED=true

CREATE_EXCLUDE_FIELDS=id
SEARCH_RANDOMIZE_FIELDS=true
GET_USE_CREATED_IDS=true
UPDATE_RANDOMIZE_VALUES=true

# Metrics Configuration
METRICS_ENABLED=true
METRICS_REPORT_INTERVAL=10s
METRICS_PORT=8083

# Example configurations for different scenarios:

# Light Load Testing
# EPS_CREATE=1
# EPS_SEARCH=0.5
# EPS_GET=0.5
# EPS_UPDATE=0.2

# Medium Load Testing
# EPS_CREATE=5
# EPS_SEARCH=2
# EPS_GET=2
# EPS_UPDATE=1

# Heavy Load Testing
# EPS_CREATE=10
# EPS_SEARCH=5
# EPS_GET=5
# EPS_UPDATE=2

# Create Only Testing
# EPS_CREATE=10
# EPS_SEARCH=0
# EPS_GET=0
# EPS_UPDATE=0

# Search Only Testing
# EPS_CREATE=0
# EPS_SEARCH=5
# EPS_GET=0
# EPS_UPDATE=0

# Advanced Search Configuration
# SEARCH_RANDOMIZE_FIELDS=true
# SEARCH_MAX_RESULTS=100

# Projection Fields Examples (comma-separated)
